<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        card_view:layout_constraintEnd_toStartOf="parent"
        card_view:layout_constraintTop_toTopOf="parent"
        android:layout_margin="15dp"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <TextView
            card_view:layout_constraintEnd_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"

            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:hint="Name"
             />

        <TextView
            card_view:layout_constraintTop_toBottomOf="@id/textView1"
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="30dp"

           android:hint="Phone Number" />

        <TextView
            android:id="@+id/textView3"
            card_view:layout_constraintTop_toBottomOf="@id/textView2"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="30dp"
           android:hint="Product NAme" />

        <TextView
            android:id="@+id/textView4"
            card_view:layout_constraintTop_toBottomOf="@id/textView3"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="30dp"
            android:hint="Price"
             />

            <TextView
                android:id="@+id/textView5"
                card_view:layout_constraintTop_toBottomOf="@id/textView4"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="30dp"
                android:hint="Description"
                tools:layout_editor_absoluteX="13dp"
                tools:layout_editor_absoluteY="116dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>